version: 2.1

references:
  workspace_root: &workspace_root
    ~/project
  attach_workspace: &attach_workspace
    attach_workspace:
      at: *workspace_root

executors:
  docker-build
    environment:
      IMAGE_NAME: quay.io/giantswarm/scratch
    docker:
      - image: cimg/base:stable
    working_directory: ~/project

jobs:
  build:
    executor: docker-build
    steps:
      - checkout
      - setup_remote_docker
      - run:
          name: Build image
          command: docker build -t $IMAGE_NAME:$CIRCLE_SHA1 .
      - run: mkdir -p out
      - run:
          name: Archive image
          command: docker save -o image.tar $IMAGE_NAME
      - persist_to_workspace:
          root: *workspace_root
          paths:
            - image.tar
      - run:
          name: Push to quay.io
          command: |
            echo "$QUAY_PASSWORD" | docker login -u "$QUAY_USERNAME" --password-stdin
            docker push $IMAGE_NAME:$CIRCLE_SHA1
  push-master:
    executor: docker-build
    steps:
      - setup_remote_docker
      - *attach_workspace
      - run:
          name: Load archived image
          command: docker load -i image.tar
      - run:
          name: Tag image with git tag
          command: docker tag $IMAGE_NAME:$CIRCLE_SHA1 $IMAGE_NAME:$CIRCLE_TAG
      - run:
          name: Push to quay.io
          command: |
            echo "$QUAY_PASSWORD" | docker login -u "$QUAY_USERNAME" --password-stdin
            docker push $IMAGE_NAME:$CIRCLE_TAG

workflows:
  version: 2
  build-master:
    jobs:
      - build:
          filters:
            branches:
              ignore: master
      - push-master:
          requires:
	    - build
          filters:
            branches:
              ignore: /.*/
            tags:
              only: /^v.*/
